# ===========================================
# Telegram Bot Configuration Template
# ===========================================
# 复制此文件为 .env 并填入实际配置值
# Copy this file to .env and fill in actual values

# ===== 必需配置 Required Configuration =====

# Telegram Bot Token (必需 - Required)
# 从 @BotFather 获取 - Get from @BotFather
BOT_TOKEN=your_bot_token_here

# 管理员ID列表 (逗号分隔) - Admin IDs (comma separated)
ADMIN_IDS=admin_id1,admin_id2

# ===== Telegram Chat Configuration =====

# 频道ID列表 (逗号分隔) - Channel IDs (comma separated)
CHANNEL_IDS=@channel1,@channel2

# 群组ID列表 (逗号分隔) - Group IDs (comma separated)
GROUP_IDS=group_id1,group_id2

# 管理群组ID - Management Group ID
MANAGEMENT_GROUP_ID=management_group_id

# ===== 成员验证配置 Membership Verification =====

# 验证群组ID列表 (逗号分隔) - Verification Group IDs (comma separated)
VERIFY_GROUP_IDS=verify_group_id1,verify_group_id2

# 验证频道ID列表 (逗号分隔) - Verification Channel IDs (comma separated)
VERIFY_CHANNEL_IDS=@verify_channel1,@verify_channel2

# 统一的解锁链接 - 群组和频道使用同一个链接
UNLOCK_LINK=https://t.me/your_group

# 强制群组成员检查 - Enforce Group Membership (true/false)
ENFORCE_GROUP_MEMBERSHIP=true

# 强制频道成员检查 - Enforce Channel Membership (true/false)
# 建议设为false避免"Member list is inaccessible"错误
# Recommend false to avoid "Member list is inaccessible" errors
ENFORCE_CHANNEL_MEMBERSHIP=false

# ===== 数据库配置 Database Configuration =====

# 数据库连接URL - Database URL
# SQLite: sqlite:///submissions.db
# PostgreSQL: postgresql://user:password@localhost/dbname
# MySQL: mysql+pymysql://user:password@localhost/dbname
DB_URL=sqlite:///submissions.db

# 数据库连接池配置 - Database Pool Configuration
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600

# ===== 通知配置 Notification Configuration =====

# PushPlus通知Token - PushPlus Notification Token
PUSHPLUS_TOKEN=your_pushplus_token

# PushPlus主题 - PushPlus Topic
PUSHPLUS_TOPIC=your_topic

# ===== 系统配置 System Configuration =====

# 服务器名称 - Server Name
SERVER_NAME=默认服务器

# 显示详细统计 - Show Detailed Stats (true/false)
SHOW_DETAILED_STATS=true

# 日志级别 - Log Level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# 启用文件日志 - Enable File Logging (true/false)
ENABLE_FILE_LOGGING=true

# ===== 性能优化配置 Performance Configuration =====

# 分页配置 - Pagination Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 缓存配置 - Cache Configuration
CACHE_TIMEOUT=300
MAX_CACHE_SIZE=1000

# 通知优化 - Notification Optimization
NOTIFICATION_BATCH_SIZE=10
NOTIFICATION_DELAY=0.1
MAX_RETRY_ATTEMPTS=3

# 清理任务配置 - Cleanup Configuration
CLEANUP_RETENTION_DAYS=30
CLEANUP_BATCH_SIZE=100

# 系统监控配置 - System Monitoring
MONITOR_INTERVAL=60
MEMORY_WARNING_THRESHOLD=80
CPU_WARNING_THRESHOLD=80

# 异步处理配置 - Async Processing
ENABLE_ASYNC_PROCESSING=false
MAX_CONCURRENT_TASKS=5

# 日志文件配置 - Log File Configuration
LOG_FILE_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5